# ============================================
# iLegal - Basic Tier Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# This template includes only the essential variables for Basic tier

# ============================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================
# For development (SQLite)
DATABASE_URL="file:./dev.db"

# For production (PostgreSQL/Vercel Postgres)
# DATABASE_URL="postgresql://username:password@host:6543/database?pgbouncer=true&connection_limit=1"
# DIRECT_URL="postgresql://username:password@host:5432/database"
# Get these from your Vercel Postgres dashboard

# For Supabase (if using Supabase instead of Vercel Postgres)
# DATABASE_URL="postgresql://postgres:[password]@aws-1-eu-central-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"
# DIRECT_URL="postgresql://postgres:[password]@aws-1-eu-central-1.pooler.supabase.com:5432/postgres"

# ============================================
# AUTHENTICATION (REQUIRED)
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-here-min-32-chars"

# For local development
NEXTAUTH_URL="http://localhost:3000"

# For production (replace with your actual domain)
# NEXTAUTH_URL="https://your-domain.vercel.app"

# ============================================
# APPLICATION CONFIGURATION (REQUIRED)
# ============================================
# For local development
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# For production (replace with your actual domain)
# NEXT_PUBLIC_APP_URL="https://your-domain.vercel.app"

# ============================================
# ENVIRONMENT SETTING (REQUIRED)
# ============================================
# For development
NODE_ENV="development"

# For production
# NODE_ENV="production"
